<h1>Players</h1>

<div class="container">
  <div class="row">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Winrate</th>
            <th>KDA</th>
            <th>Skill points</th>
          </tr>
        </thead>

        <tbody>
          <% @players.each do |player| %>
            <tr>
              <td><%= link_to player.name, player %></td>
              <td><%= player.winrate.round(2) if player.winrate %></td>
              <td><%= player.kda.round(2) if player.kda%></td>
              <td><%= player.skill_points %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-12 text-center">
      <ul class="pagination pagination-lg pager" id="myPager"></ul>
    </div>
  </div>
</div>

<%= link_to 'New Player', new_player_path %>

<%= will_paginate @players %>