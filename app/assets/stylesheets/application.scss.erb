 @import 'normalize';

body {
  background-image: url('<%= asset_path("bg-default.jpg") %>');
  .container-fluid {
    width: 80%;
    div.content {
      background-color: #FFF7DE;
      letter-spacing: 1pt;
      opacity: 0.8;
      margin-top: 50pt;
      padding-top: 20pt;
      text-align: center;
      div.jumbotron {
        background-color: #FFF7DE;
        letter-spacing: 1pt;
        margin-bottom: 50pt;
        opacity: 0.8;
        text-align: center;
        p {
          line-height: 1.5;
        }
      }
      form {
        width: 60%;  
        margin: auto;
        input, select {
          text-align: center;
        }
        select {
          width: 100%
        }
      }
      a {
        &.back {
          display: inline-block;
          margin: 10pt;
        }
      }
      .btn-primary {
        background-color: #FFB700;
      }
      .btn-info {
        background-color: #3A81CE;
      }
      .btn-sm, .btn-lg {
        border-color: black;  
        color: black;
        width: 100pt;
      }
      .btn:hover {
        color: #331400;
      }
    }
  }
  footer {
    bottom: 0;
    color: white;
    font-size: 80%;
    height: 20pt;
    position: absolute;
    text-align: center;
    width: 100%;
    z-index: -1
  }
}
